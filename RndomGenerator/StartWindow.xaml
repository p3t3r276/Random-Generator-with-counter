<Window x:Class="RndomGenerator.StartWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:RndomGenerator"
		mc:Ignorable="d"
		Title="iCIO2017" Height="600" Width="800" WindowStartupLocation="CenterScreen"
		WindowStyle="None">
	<Grid>
		<StackPanel
			HorizontalAlignment="Center"
			VerticalAlignment="Center">
			<Label
				FontSize="90"
				FontWeight="Bold"
				FontStretch="Expanded"
				Content="iCIO 2017"
				HorizontalContentAlignment="Center"/>
			<TextBox
				FontSize="40"
				Text="Nhập các số bạn muốn xuất hiện"
				Margin="20, 40, 20, 0"
				x:Name="txtExpectedNumbers"
				/>
			<Button
				Width="400"
				Height="80"
				FontSize="40"
				Content="Vào chương trình"
				Margin="20, 40, 20, 0"
				Click="Button_Click"
				/>
		</StackPanel>
	</Grid>
</Window>
