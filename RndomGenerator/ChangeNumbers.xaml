<Window x:Class="RndomGenerator.ChangeNumbers"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:RndomGenerator"
		mc:Ignorable="d"
		Title="ChangeNumbers" Height="400" Width="600" KeyDown="OnKeyDown">
	<Grid TextBlock.FontSize="20">
		<StackPanel
			x:Name="stackpanel"
			HorizontalAlignment="Center"
			VerticalAlignment="Center">
			<Label
				FontSize="40"
				FontWeight="Bold"
				FontStretch="Expanded"
				Content="Thay đổi số"
				HorizontalContentAlignment="Center"/>
			<TextBox
				Text="Nhập số nhỏ nhất"
				Margin="20, 40, 20, 0"
				x:Name="txtStartNumber"
				/>
			<TextBox
				Text="Nhập số đầu tiên"
				Margin="20, 10, 20, 0"
				x:Name="txtEndNumber"
				/>
			<TextBox
				Text="Nhập các số bạn muốn xuất hiện"
				Margin="20, 10, 20, 0"
				x:Name="txtExpectedNumbers"
				/>
			<Button
				FontWeight="Bold"
				Content="OK"
				Margin="20, 40, 20, 0"
				Click="Button_Click"
				/>
		</StackPanel>
	</Grid>
</Window>
